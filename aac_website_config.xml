<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Configuración del Sitio Web AAC -->
        <record id="aac_website" model="website">
            <field name="name">Asociación Argentina de Cirugía</field>
            <field name="domain">demo-gf.odoo.com</field>
        </record>

        <!-- Página Principal -->
        <record id="aac_homepage" model="website.page">
            <field name="name">Inicio</field>
            <field name="url">/</field>
            <field name="website_id" ref="aac_website"/>
            <field name="content">
                <![CDATA[
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50" data-scroll-background-ratio="1">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h1 class="display-3 text-white">Asociación Argentina de Cirugía</h1>
                                <p class="lead text-white">La Asociación Argentina de Cirugía promueve la excelencia en la práctica quirúrgica a través de educación continua, investigación y desarrollo profesional. Brindamos recursos, cursos y eventos para cirujanos de todo el país.</p>
                                <a href="/solicitud-afiliacion" class="btn btn-primary btn-lg">Únase hoy</a>
                            </div>
                        </div>
                    </div>
                </section>
                ]]>
            </field>
        </record>

        <!-- Página de Solicitud de Afiliación -->
        <record id="aac_affiliation_page" model="website.page">
            <field name="name">Solicitud de Afiliación</field>
            <field name="url">/solicitud-afiliacion</field>
            <field name="website_id" ref="aac_website"/>
            <field name="content">
                <![CDATA[
                <section class="s_cover bg-white">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                <h2 class="text-center mb-4">Solicitud de Afiliación</h2>
                                <p class="text-center mb-5">Complete el siguiente formulario para solicitar su afiliación a la Asociación Argentina de Cirugía.</p>
                                
                                <form action="/web/signup" method="post" class="form-horizontal">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Nombre Completo *</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="name" class="form-control" required/>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Email *</label>
                                        <div class="col-sm-9">
                                            <input type="email" name="email" class="form-control" required/>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Teléfono</label>
                                        <div class="col-sm-9">
                                            <input type="tel" name="phone" class="form-control"/>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Especialidad *</label>
                                        <div class="col-sm-9">
                                            <select name="specialty" class="form-control" required>
                                                <option value="">Seleccione una especialidad</option>
                                                <option value="cirugia_general">Cirugía General</option>
                                                <option value="cardiovascular">Cirugía Cardiovascular</option>
                                                <option value="pediatria">Cirugía Pediátrica</option>
                                                <option value="trauma">Cirugía de Trauma</option>
                                                <option value="oncologia">Cirugía Oncológica</option>
                                                <option value="neurocirugia">Neurocirugía</option>
                                                <option value="ortopedia">Cirugía Ortopédica</option>
                                                <option value="plastica">Cirugía Plástica</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Institución</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="institution" class="form-control"/>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Tipo de Afiliación *</label>
                                        <div class="col-sm-9">
                                            <select name="membership_type" class="form-control" required>
                                                <option value="">Seleccione tipo de afiliación</option>
                                                <option value="activo">Activo</option>
                                                <option value="residente">Residente</option>
                                                <option value="estudiante">Estudiante</option>
                                                <option value="honorario">Honorario</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <div class="col-sm-9 offset-sm-3">
                                            <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                ]]>
            </field>
        </record>

        <!-- Configuración de Registro de Usuarios -->
        <record id="aac_signup_config" model="res.config.settings">
            <field name="auth_signup_uninvited">b2b</field>
            <field name="auth_signup_reset_password">True</field>
        </record>

        <!-- Configuración de Email para Solicitudes -->
        <record id="aac_affiliation_email_template" model="mail.template">
            <field name="name">Solicitud de Afiliación AAC</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Nueva Solicitud de Afiliación - {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.user_id.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Se ha recibido una nueva solicitud de afiliación:</p>
                    <ul>
                        <li><strong>Nombre:</strong> {{ object.name }}</li>
                        <li><strong>Email:</strong> {{ object.email_from }}</li>
                        <li><strong>Teléfono:</strong> {{ object.phone }}</li>
                        <li><strong>Especialidad:</strong> {{ object.specialty }}</li>
                        <li><strong>Institución:</strong> {{ object.institution }}</li>
                        <li><strong>Tipo de Afiliación:</strong> {{ object.membership_type }}</li>
                    </ul>
                    <p>Por favor, revise y apruebe o rechace esta solicitud.</p>
                </div>
            </field>
        </record>

    </data>
</odoo>


